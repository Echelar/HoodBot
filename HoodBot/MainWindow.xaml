<Window
	x:Class="RobinHood70.HoodBot.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:RobinHood70.HoodBot"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:properties="clr-namespace:RobinHood70.HoodBot.Properties"
	xmlns:vm="clr-namespace:RobinHood70.HoodBot.ViewModel"
	x:Name="mainWindow"
	Title="{x:Static properties:Resources.HoodBotMainWindow}"
	Style="{StaticResource GlobalWindowStyle}"
	mc:Ignorable="d">
	<Window.Resources>
		<Style TargetType="Button">
			<Setter Property="Width" Value="{Binding ActualHeight, RelativeSource={RelativeSource Self}}" />
			<Setter Property="Padding" Value="0" />
		</Style>
		<Style TargetType="DockPanel">
			<Setter Property="LastChildFill" Value="True" />
		</Style>
		<Style TargetType="ProgressBar">
			<Setter Property="MinHeight" Value="{Binding FontSize, RelativeSource={RelativeSource Self}}" />
		</Style>
		<Style TargetType="TextBlock">
			<Setter Property="TextWrapping" Value="WrapWithOverflow" />
			<Setter Property="VerticalAlignment" Value="Center" />
		</Style>
		<Style TargetType="Viewbox">
			<Setter Property="Margin" Value="3" />
			<Setter Property="Stretch" Value="Uniform" />
		</Style>
		<Style x:Key="SpeedText" TargetType="TextBlock">
			<Setter Property="FontFamily" Value="WebDings" />
			<Setter Property="HorizontalAlignment" Value="Center" />
		</Style>
	</Window.Resources>
	<Window.DataContext>
		<vm:MainViewModel />
	</Window.DataContext>
	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="10" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="10" />
			<RowDefinition Height="2*" />
			<RowDefinition Height="10" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="10" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="10" />
			<RowDefinition Height="auto" />
		</Grid.RowDefinitions>
		<Grid
			Grid.Row="0"
			Grid.Column="0"
			VerticalAlignment="Center">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="auto" />
				<ColumnDefinition Width="10" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="10" />
				<ColumnDefinition Width="auto" />
			</Grid.ColumnDefinitions>
			<TextBlock
				Grid.Column="0"
				DockPanel.Dock="Left"
				Text="{x:Static properties:Resources.Wiki}" />
			<ComboBox
				Grid.Column="2"
				VerticalAlignment="Center"
				DisplayMemberPath="DisplayName"
				ItemsSource="{Binding KnownWikis.Wikis}"
				SelectedItem="{Binding CurrentItem}" />
			<Button
				Grid.Column="4"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				HorizontalContentAlignment="Stretch"
				VerticalContentAlignment="Stretch"
				Command="{Binding EditWikiList}">
				<TextBlock
					HorizontalAlignment="Center"
					FontFamily="WingDings"
					Text="!" />
			</Button>
		</Grid>
		<Grid Grid.Row="0" Grid.Column="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="auto" />
				<ColumnDefinition Width="10" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto" />
				<RowDefinition Height="3" />
				<RowDefinition Height="auto" />
			</Grid.RowDefinitions>
			<TextBlock
				Grid.Row="0"
				Grid.Column="0"
				HorizontalAlignment="Right"
				DockPanel.Dock="Left"
				Text="{x:Static properties:Resources.UserName}" />
			<TextBox Grid.Row="0" Grid.Column="2" />
			<TextBlock
				Grid.Row="2"
				Grid.Column="0"
				HorizontalAlignment="Right"
				DockPanel.Dock="Left"
				Text="{x:Static properties:Resources.Password}" />
			<PasswordBox
				Grid.Row="2"
				Grid.Column="2"
				local:PasswordHelper.Attach="True"
				local:PasswordHelper.Password="{Binding Password, Mode=TwoWay}" />
		</Grid>
		<DockPanel
			Grid.Row="2"
			Grid.Column="0"
			LastChildFill="True">
			<TextBlock
				HorizontalAlignment="Center"
				DockPanel.Dock="Top"
				Text="{x:Static properties:Resources.AvailableJobs}" />
			<TreeView ItemsSource="{Binding JobTree.Children, Mode=OneTime}" SelectedItemChanged="TreeView_SelectedItemChanged">
				<TreeView.ItemTemplate>
					<HierarchicalDataTemplate DataType="{x:Type vm:JobNode}" ItemsSource="{Binding Children, Mode=OneTime}">
						<StackPanel Orientation="Horizontal">
							<Viewbox Height="{Binding FontSize, ElementName=mainWindow}">
								<CheckBox
									HorizontalAlignment="Stretch"
									VerticalAlignment="Stretch"
									Focusable="False"
									IsChecked="{Binding IsChecked}" />
							</Viewbox>
							<TextBlock Margin="3,0,0,0" Text="{Binding Name, Mode=OneTime}" />
						</StackPanel>
					</HierarchicalDataTemplate>
				</TreeView.ItemTemplate>
			</TreeView>
		</DockPanel>
		<DockPanel
			Grid.Row="2"
			Grid.Column="2"
			LastChildFill="True">
			<DockPanel.Background>
				<ImageBrush
					ImageSource="HoodBot.png"
					Opacity="{Binding BotPicOpacity, FallbackValue=1, Mode=OneWay}"
					Stretch="Uniform" />
			</DockPanel.Background>
			<TextBlock
				HorizontalAlignment="Center"
				DockPanel.Dock="Top"
				Text="{x:Static properties:Resources.RequiredInfo}"
				Visibility="Hidden" />
			<Border
				BorderBrush="Gray"
				BorderThickness="1"
				Visibility="Hidden">
				<StackPanel x:Name="JobParameters" Orientation="Vertical" />
			</Border>
		</DockPanel>
		<TextBox
			x:Name="Status"
			Grid.Row="4"
			Grid.Column="0"
			Grid.ColumnSpan="3"
			VerticalScrollBarVisibility="Auto" />
		<ProgressBar
			Grid.Row="6"
			Grid.Column="0"
			Grid.ColumnSpan="3"
			Foreground="{Binding ProgressBarColor}"
			Maximum="{Binding OverallProgressMax, Mode=OneWay}"
			Value="{Binding OverallProgress, Mode=OneWay}" />
		<Grid
			Grid.Row="8"
			Grid.Column="0"
			Grid.ColumnSpan="3">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="auto" />
				<ColumnDefinition Width="10" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="10" />
				<ColumnDefinition Width="auto" />
				<ColumnDefinition Width="10" />
				<ColumnDefinition Width="auto" />
				<ColumnDefinition Width="10" />
				<ColumnDefinition Width="auto" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto" />
				<RowDefinition Height="auto" />
			</Grid.RowDefinitions>
			<TextBlock
				Grid.Row="0"
				Grid.Column="0"
				HorizontalAlignment="Right"
				Text="{x:Static properties:Resources.EstimatedCompletion}" />
			<TextBlock
				Grid.Row="0"
				Grid.Column="2"
				Text="{Binding Eta, Mode=OneWay, StringFormat=T}" />
			<TextBlock
				Grid.Row="1"
				Grid.Column="0"
				HorizontalAlignment="Right"
				Text="{x:Static properties:Resources.EstimatedCompletionUTC}" />
			<TextBlock
				Grid.Row="1"
				Grid.Column="2"
				Text="{Binding UtcEta, Mode=OneWay, StringFormat=T}" />
			<Button
				Grid.Row="0"
				Grid.RowSpan="2"
				Grid.Column="4"
				Command="{Binding Play}">
				<Viewbox>
					<TextBlock Style="{StaticResource SpeedText}" Text="4" />
				</Viewbox>
			</Button>
			<Button
				Grid.Row="0"
				Grid.RowSpan="2"
				Grid.Column="6"
				Command="{Binding Pause}">
				<Viewbox>
					<TextBlock Style="{StaticResource SpeedText}" Text=";" />
				</Viewbox>
			</Button>
			<Button
				Grid.Row="0"
				Grid.RowSpan="2"
				Grid.Column="8"
				Command="{Binding Stop}">
				<Viewbox>
					<TextBlock Style="{StaticResource SpeedText}" Text="&lt;" />
				</Viewbox>
			</Button>
		</Grid>
	</Grid>
</Window>